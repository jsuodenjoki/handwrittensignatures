{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/signatures/(.*)", "dest": "/public/signatures/$1" },
    { "src": "/example_(.*).png", "dest": "/public/signatures/example_$1.png" },
    { "src": "/fonts/(.*)", "dest": "/public/fonts/$1" },
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
